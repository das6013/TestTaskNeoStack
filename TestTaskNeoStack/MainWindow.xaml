<Window x:Class="TestTaskNeoStack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTaskNeoStack"
        mc:Ignorable="d"
        Title="Test task" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Center" 
                 Margin="0,36,0,0" 
                 Text="{Binding Path=SelectedFunction.A, UpdateSourceTrigger=PropertyChanged}" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120" Grid.Column="1"
                 PreviewTextInput="TextBox_PreviewTextInput"
                 PreviewKeyDown="TextBox_PreviewKeyDown"/>
        <TextBox HorizontalAlignment="Center" 
                 Margin="0,84,0,0" 
                 Text="{Binding Path=SelectedFunction.B, UpdateSourceTrigger=PropertyChanged}" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120" Grid.Column="1"
                 PreviewTextInput="TextBox_PreviewTextInput"
                 PreviewKeyDown="TextBox_PreviewKeyDown"/>
        <ComboBox HorizontalAlignment="Center" 
                  Margin="0,141,0,0" 
                  VerticalAlignment="Top" 
                  Width="120"
                  Grid.Column="1"
                  SelectedIndex="0"
                  ItemsSource="{Binding Path=SelectedFunction.Arguments, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding Path=SelectedFunction.C, UpdateSourceTrigger=PropertyChanged}"
                  >
        </ComboBox>
        <ListBox Margin="20,10,0,206"
                 ItemsSource="{Binding Functions}"
                 SelectedItem="{Binding SelectedFunction}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=FuncName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <DataGrid x:Name="DataGridResFunction"  
                  Margin="5,10,10,206" 
                  Grid.Column="3" 
                  AutoGenerateColumns="False" 
                  ItemsSource="{Binding Path=CalculatedFunctions, UpdateSourceTrigger=PropertyChanged}"
                  CanUserAddRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="F(X, Y)" Width="60" Binding="{Binding Path=CalculateFunction}" IsReadOnly="True"/>
                <DataGridTextColumn Header="X" Width="60" Binding="{Binding Path=X, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Y" Width="*" Binding="{Binding Path=Y, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="a" Grid.Column="1" HorizontalAlignment="Left" Margin="15,13,0,0" VerticalAlignment="Top"/>
        <Label Content="b" Grid.Column="1" HorizontalAlignment="Left" Margin="15,56,0,0" VerticalAlignment="Top"/>
        <Label Content="c" Grid.Column="1" HorizontalAlignment="Left" Margin="15,109,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
